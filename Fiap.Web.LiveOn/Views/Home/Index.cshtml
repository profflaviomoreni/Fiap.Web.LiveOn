@model Fiap.Web.LiveOn.ViewModel.DashboardViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">


    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Total Vendas Mensal</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">R$ @Model.TotalVendasMes<small class="text-body-secondary fw-light">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>YTD R$ @Model.TotalVendasAno  </li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary">Sign up for free</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Clientes</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title"> @Model.TotalClientes <small class="text-body-secondary fw-light"> ativos </small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@Model.TotalClientePJ PJ</li>
                        <li>@Model.TotalClientePF PF</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary">Get started</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm border-primary">
                <div class="card-header py-3 text-bg-primary border-primary">
                    <h4 class="my-0 fw-normal">Modelos</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title"> 29</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>10 Passeios</li>
                        <li>10 SUV</li>
                        <li>9 Transporte</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary">Contact us</button>
                </div>
            </div>
        </div>
    </div>

